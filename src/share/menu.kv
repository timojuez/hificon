<WelcomeScreen>:
    canvas.before:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        id: image


<_MenuScreen>:
    GridLayout:
        rows: 2
        cols: 1
        ScrollView:
            id: tab_list
            size_hint_y: None
            height: 50
            do_scroll_x: True
            do_scroll_y: False
            ScrollViewLayoutHorizontal:
                id: headers
                padding: 2
                rows: 1
        StackLayout:
            id: menu_content
            canvas.before:
                Color:
                    rgba: .188, .188, .188, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


<TabHeader>:
    size_hint_x: None
    width: 100
    allow_no_selection: False


<TabPanel>:
    do_scroll_x: False
    do_scroll_y: True
    
    ScrollViewLayoutVertical:
        id: layout


<MyGrid@GridLayout>:
    padding: 20
    spacing: 20
    row_force_default: True
    row_default_height: 50


<SettingsTabHeader>:
    text: "Connection"


<SettingsTab>:
    MyGrid:
        cols: 2

        Label:
            text: "Host"
        TextInput:
            id: host
            multiline: False
        Label:
            text: "Port"
        TextInput:
            id: port
            multiline: False
        Label:
            text: "Scheme"
        Button:
            id: scheme
        Label:
            text: ""
        Button:
            text: "Apply"
            on_press: root.apply()


<AboutTabHeader>:
    text: "About"

<AboutTab>:
    GridLayout:
        cols: 1
        Label:
            id: text


<ConnectingTab>:
    text: "Connecting ..."


<ScrollViewLayoutVertical>:
    size_hint_y: None


<ScrollViewLayoutHorizontal>:
    size_hint_x: None


<VarRow>:
    cols: 3
    size_hint_y: None
    
    Label:
        id: text
        size_hint_x: 0.4
        text_size: self.width, None

    BoxLayout:
        id: content

    AnchorLayout:
        size_hint_x: 0.4
        anchor_x: 'center'
        BoxLayout:
            size_hint_x: None
            width: self.minimum_width
            CheckBox:
                id: checkbox
                size_hint_x: None
                width: 40
            Label:
                text: "Pin"
                size_hint_x: None
                size: self.texture_size


<NumericVar>:
    cols: 2

    Slider:
        id: slider
        
    Label:
        id: label
        text: str(slider.value)
        size_hint_x: None
        width: 50
        

<SelectVarOption>:
    size_hint_y: None
    height: 44


<SelectVarOptions>:

<SelectVar>:
    id: button

<BoolVar>:
    cols: 2
    ToggleButton:
        id: off
        text: "OFF"
        #group: root
        value: False
    ToggleButton:
        id: on
        text: "ON"
        #group: root
        value: True

